@section Scripts {
    <script>
        $(document).ready(function() {
            // Loading Screen
            setTimeout(() => {
                $('.loading-screen').addClass('hide');
            }, 1000);

            // Parallax Effect
            $(window).scroll(function() {
                const scrolled = $(window).scrollTop();
                $('.parallax-bg').css('background-position-y', -(scrolled * 0.5) + 'px');
            });

            // Smooth Scroll
            $('.scroll-indicator').click(function() {
                $('html, body').animate({
                    scrollTop: $('.menu-container').offset().top - 50
                }, 800);
            });

            // Filter Animation
            $('.filter-pill').click(function() {
                const category = $(this).data('category');
                $('.filter-pill').removeClass('active');
                $(this).addClass('active');

                if (category === 'all') {
                    $('.menu-item').fadeIn(300);
                } else {
                    $('.menu-item').fadeOut(300);
                    $(`.menu-item[data-category="${category}"]`).fadeIn(300);
                }
            });

            // Lazy Loading Animation
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('fade-in');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.menu-item').forEach(item => {
                observer.observe(item);
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Search functionality
            $('#menuSearch').on('input', function() {
                const searchTerm = $(this).val().toLowerCase();
                $('.menu-item').each(function() {
                    const title = $(this).find('.dish-title').text().toLowerCase();
                    const description = $(this).find('.dish-description').text().toLowerCase();
                    if (title.includes(searchTerm) || description.includes(searchTerm)) {
                        $(this).fadeIn(300);
                    } else {
                        $(this).fadeOut(300);
                    }
                });
            });

            // Quick View Modal
            $('.quick-view-btn').click(function() {
                const modal = $('#quickViewModal');
                const button = $(this);
                
                modal.find('.quick-view-img img').attr('src', button.data('image'));
                modal.find('.quick-view-title').text(button.data('name'));
                modal.find('.quick-view-description').text(button.data('description'));
                modal.find('.quick-view-category').text(button.data('category'));
                modal.find('.quick-view-preptime').text(button.data('preptime'));
                modal.find('.quick-view-calories').text(button.data('calories'));
                modal.find('.quick-view-price').text('₹' + button.data('price'));
            });

            // Quantity Selector
            $('.quantity-btn').click(function() {
                const input = $(this).siblings('.quantity-input');
                const currentValue = parseInt(input.val());
                
                if ($(this).hasClass('minus') && currentValue > 1) {
                    input.val(currentValue - 1);
                } else if ($(this).hasClass('plus') && currentValue < 10) {
                    input.val(currentValue + 1);
                }
            });

            // Cart functionality
            let cart = JSON.parse(localStorage.getItem('cart') || '[]');
            let cartTotal = 0;

            // Initialize cart UI
            updateCartUI();

            // Cart panel toggle
            $('.cart-toggle').click(function() {
                $('.cart-panel').addClass('show');
                $('.cart-overlay').fadeIn();
            });

            $('.cart-close, .cart-overlay').click(function() {
                $('.cart-panel').removeClass('show');
                $('.cart-overlay').fadeOut();
            });

            // Quantity Controls
            $(document).on('click', '.quantity-btn', function() {
                const button = $(this);
                const itemId = button.data('id');
                const action = button.data('action');
                const item = cart.find(i => i.id === itemId);
                
                if (item) {
                    if (action === 'increase') {
                        item.quantity++;
                    } else if (action === 'decrease' && item.quantity > 1) {
                        item.quantity--;
                    } else if (action === 'decrease' && item.quantity === 1) {
                        removeFromCart(itemId);
                        return;
                    }
                    
                    localStorage.setItem('cart', JSON.stringify(cart));
                    updateCartUI();
                }
            });

            // Remove item
            $(document).on('click', '.remove-item', function() {
                const itemId = $(this).data('id');
                cart = cart.filter(item => item.id !== itemId);
                localStorage.setItem('cart', JSON.stringify(cart));
                updateCartUI();
            });

            // Checkout button
            $('.checkout-btn').click(function() {
                if (cart.length > 0) {
                    localStorage.setItem('cart', JSON.stringify(cart));
                    window.location.href = '/Account/Orders';
                }
            });

            function updateCartUI() {
                const cartItems = $('.cart-items');
                const emptyCart = $('.cart-empty');
                const checkoutBtn = $('.checkout-btn');
                
                if (cart.length === 0) {
                    cartItems.html('');
                    emptyCart.removeClass('d-none');
                    checkoutBtn.prop('disabled', true);
                } else {
                    emptyCart.addClass('d-none');
                    checkoutBtn.prop('disabled', false);
                    
                    let html = '';
                    cart.forEach(item => {
                        const imgSrc = item.image || '/images/dishes/default-dish.jpg';
                        html += `
                            <div class="cart-item" data-id="${item.id}">
                                <img src="${imgSrc}" alt="${item.name}" class="cart-item-img" onerror="this.src='/images/dishes/default-dish.jpg'">
                                <div class="cart-item-details">
                                    <div class="cart-item-title">${item.name}</div>
                                    <div class="cart-item-price">₹${(item.price * item.quantity).toFixed(2)}</div>
                                    <div class="d-flex align-items-center gap-2">
                                        <button class="btn btn-sm btn-outline-secondary quantity-btn" data-id="${item.id}" data-action="decrease">-</button>
                                        <span class="quantity">${item.quantity}</span>
                                        <button class="btn btn-sm btn-outline-secondary quantity-btn" data-id="${item.id}" data-action="increase">+</button>
                                    </div>
                                </div>
                                <button class="btn btn-link text-danger remove-item" data-id="${item.id}">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        `;
                    });
                    cartItems.html(html);
                }

                // Update total
                cartTotal = cart.reduce((total, item) => total + (item.price * item.quantity), 0);
                $('.total-amount').text(`₹${cartTotal.toFixed(2)}`);
            }

            // Add to cart
            $('.add-to-cart').click(function() {
                const button = $(this);
                const id = parseInt(button.data('id'));
                const name = button.data('name');
                const price = parseFloat(button.data('price'));
                const image = button.closest('.menu-card').find('img').attr('src');

                const existingItem = cart.find(item => item.id === id);
                if (existingItem) {
                    existingItem.quantity++;
                } else {
                    cart.push({ id, name, price, image, quantity: 1 });
                }

                // Show cart panel
                $('.cart-panel').addClass('show');
                $('.cart-overlay').fadeIn();

                // Update cart UI
                $('.cart-panel').addClass('active');
                $('.cart-overlay').addClass('active');
                
                // Cart shake animation
                $('.cart-panel').addClass('cart-shake');
                setTimeout(() => $('.cart-panel').removeClass('cart-shake'), 500);

                updateCartUI();
                $('#quickViewModal').modal('hide');
            });

            // Cart panel controls
            $('.cart-close, .cart-overlay').click(function() {
                $('.cart-panel').removeClass('active');
                $('.cart-overlay').removeClass('active');
            });

            // Cart item quantity controls
            $(document).on('click', '.cart-quantity-btn', function() {
                const button = $(this);
                const cartItem = button.closest('.cart-item');
                const id = cartItem.data('id');
                const item = cart.find(item => item.id === id);

                if (button.hasClass('minus') && item.quantity > 1) {
                    item.quantity--;
                } else if (button.hasClass('plus')) {
                    item.quantity++;
                }

                updateCartUI();
            });

            // Remove cart item
            $(document).on('click', '.cart-item-remove', function() {
                const cartItem = $(this).closest('.cart-item');
                const id = cartItem.data('id');
                cart = cart.filter(item => item.id !== id);
                
                cartItem.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => {
                    updateCartUI();
                }, 300);
            });

            // Checkout button
            $('.checkout-btn').click(function() {
                // Add checkout logic here
                alert('Proceeding to checkout...');
            });

            // Add image error handling
            $('img').on('error', function() {
                if ($(this).hasClass('cart-item-img') || $(this).hasClass('dish-image img')) {
                    $(this).attr('src', '/images/dishes/default-dish.jpg');
                } else if ($(this).hasClass('empty-cart-img')) {
                    $(this).attr('src', '/images/empty-cart.svg');
                }
            });

            // Preload images for better performance
            const imagesToPreload = [
                '/images/banners/menu-banner.jpg',
                '/images/dishes/default-dish.jpg',
                '/images/empty-cart.svg'
            ];

imagesToPreload.forEach(src => {
    const img = new Image();
    img.src = src;
});

// Category filtering
$('.category-btn').click(function() {
    $('.category-btn').removeClass('active');

    $(this).addClass('active');
    
    const category = $(this).data('category');
    if (category === 'all') {
        $('.menu-item').show();
    } else {
        $('.menu-item').hide();
        $(`.menu-item[data-category="${category}"]`).show();
    }
});

// Parallax effect on scroll
$(window).scroll(function() {
    const scroll = $(window).scrollTop();
    $('.menu-header').css({
        'background-position': `center ${scroll * 0.5}px`
    });
});
});
</script>
}
