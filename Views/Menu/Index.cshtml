@section Styles {
    <style>
        /* Loading Screen */
        .loading-screen {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: white;
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: opacity 0.5s ease, visibility 0.5s ease;
        }

        .loading-screen.hide {
            opacity: 0;
            visibility: hidden;
        }

        .loader {
            width: 50px;
            height: 50px;
            border: 3px solid #f3f3f3;
            border-top: 3px solid #007bff;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        /* Hero Section */
        .hero-section {
            height: 500px;
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            position: relative;
            display: flex;
            align-items: center;
            overflow: hidden;
        }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .hero-search {
            max-width: 500px;
            margin: 0 auto;
        }

        .hero-search input {
            height: 50px;
            font-size: 1.1rem;
            padding-left: 50px;
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.9);
            border: none;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        /* Scroll Indicator */
        .scroll-indicator {
            position: absolute;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 2;
        }

        .mouse {
            width: 25px;
            height: 40px;
            border: 2px solid white;
            border-radius: 15px;
            position: relative;
            margin: 0 auto 10px;
        }

        .wheel {
            width: 3px;
            height: 8px;
            background: white;
            position: absolute;
            top: 5px;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 3px;
            animation: scroll 1.5s infinite;
        }

        .arrows span {
            display: block;
            width: 10px;
            height: 10px;
            border-right: 2px solid white;
            border-bottom: 2px solid white;
            transform: rotate(45deg);
            margin: -5px auto;
            animation: arrows 1.5s infinite;
        }

        .arrows span:nth-child(2) { animation-delay: 0.2s; }
        .arrows span:nth-child(3) { animation-delay: 0.4s; }

        /* Filter Pills */
        .filter-pills {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .filter-pill {
            background: none;
            border: 2px solid #e9ecef;
            padding: 0.8rem 1.5rem;
            border-radius: 30px;
            color: #6c757d;
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .filter-pill::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: #007bff;
            border-radius: 50%;
            transform: translate(-50%, -50%);
            transition: width 0.3s ease, height 0.3s ease;
            z-index: -1;
        }

        .filter-pill:hover::before,
        .filter-pill.active::before {
            width: 300px;
            height: 300px;
        }

        .filter-pill:hover,
        .filter-pill.active {
            color: white;
            border-color: #007bff;
        }

        .filter-pill i {
            margin-right: 8px;
        }

        /* Dish Card Enhancements */
        .dish-card {
            transform: translateY(0);
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .dish-card:hover {
            transform: translateY(-10px) scale(1.02);
        }

        .dish-image::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.8));
            z-index: 1;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .dish-card:hover .dish-image::before {
            opacity: 1;
        }

        /* Animations */
        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @@keyframes scroll {
            0% { opacity: 1; transform: translateX(-50%) translateY(0); }
            100% { opacity: 0; transform: translateX(-50%) translateY(10px); }
        }

        @@keyframes arrows {
            0% { opacity: 0; transform: rotate(45deg) translate(-5px, -5px); }
            50% { opacity: 1; }
            100% { opacity: 0; transform: rotate(45deg) translate(5px, 5px); }
        }

        .fade-in {
            animation: fadeIn 1s ease;
        }

        .fade-in-up {
            animation: fadeInUp 1s ease;
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Hero Section */
        .hero-section {
            height: 300px;
            background-size: cover;
            background-position: center;
            position: relative;
            display: flex;
            align-items: center;
            margin-bottom: 2rem;
        }

        .hero-section .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.6);
        }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        /* Search and Filters */
        .search-box {
            position: relative;
            margin-bottom: 1rem;
        }

        .search-box i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .search-box input {
            padding-left: 45px;
            border-radius: 30px;
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }

        .search-box input:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
        }

        .filter-btn {
            background: none;
            border: 2px solid #e9ecef;
            padding: 8px 20px;
            border-radius: 30px;
            color: #6c757d;
            margin: 0 5px;
            transition: all 0.3s ease;
        }

        .filter-btn:hover, .filter-btn.active {
            background: #007bff;
            border-color: #007bff;
            color: white;
        }

        /* Dish Card */
        .dish-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            height: 100%;
        }

        .dish-image {
            position: relative;
            height: 200px;
            overflow: hidden;
        }

        .dish-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .dish-card:hover .dish-image img {
            transform: scale(1.1);
        }

        .dish-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: all 0.3s ease;
        }

        .dish-card:hover .dish-overlay {
            opacity: 1;
        }

        .dish-badges {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 2;
        }

        .badge {
            padding: 6px 12px;
            margin-right: 5px;
            border-radius: 20px;
            font-weight: 500;
        }

        .badge.veg {
            background-color: #28a745;
            color: white;
        }

        .badge.non-veg {
            background-color: #dc3545;
            color: white;
        }

        .badge.spicy {
            background-color: #ffc107;
            color: #000;
        }

        .dish-category {
            position: absolute;
            bottom: 0;
            right: 0;
            background: rgba(0,0,0,0.7);
            color: white;
            padding: 5px 15px;
            border-top-left-radius: 15px;
        }

        .dish-info {
            padding: 1.5rem;
        }

        .dish-title {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
            color: #2c3e50;
        }

        .dish-description {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 1rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .dish-meta {
            display: flex;
            justify-content: space-between;
            color: #6c757d;
