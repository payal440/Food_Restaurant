@section Styles {
    <style>
        .about-header {
            background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.7)),
                        url('https://images.unsplash.com/photo-1514933651103-005eec06c04b');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            padding: 120px 0 80px;
            margin-top: -20px;
            position: relative;
            overflow: hidden;
        }

        .about-header .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at center, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.8) 100%);
            z-index: 1;
        }

        .about-header .container {
            position: relative;
            z-index: 2;
        }

        .about-header .badge {
            font-size: 1rem;
            padding: 0.5rem 1.5rem;
            background-color: #ff4757 !important;
            margin-bottom: 1.5rem;
            transform: translateY(20px);
            animation: fadeInDown 0.5s ease forwards;
        }

        .about-header h1 {
            font-size: 4rem;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            transform: translateY(20px);
            animation: fadeInDown 0.5s ease forwards 0.2s;
        }

        .about-header .lead {
            font-size: 1.25rem;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
            transform: translateY(20px);
            animation: fadeInDown 0.5s ease forwards 0.4s;
        }

        .quick-stats {
            margin-top: 3rem;
            transform: translateY(20px);
            animation: fadeInUp 0.5s ease forwards 0.6s;
        }

        .stat-item {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 1rem 2rem;
            border-radius: 15px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .stat-item:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.2);
        }

        .stat-number {
            display: block;
            font-size: 2rem;
            font-weight: bold;
            color: #ff4757;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            display: block;
            color: white;
            font-size: 0.9rem;
            white-space: nowrap;
        }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .about-header {
                padding: 100px 0 60px;
            }

            .about-header h1 {
                font-size: 3rem;
            }

            .stat-item {
                padding: 0.8rem 1.5rem;
            }

            .stat-number {
                font-size: 1.5rem;
            }

            .stat-label {
                font-size: 0.8rem;
            }
        }

        .about-content {
            padding-right: 30px;
        }

        .achievement-card {
            text-align: center;
            padding: 20px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .achievement-card:hover {
            transform: translateY(-5px);
        }

        .achievement-icon {
            font-size: 2rem;
            color: #ff4757;
            margin-bottom: 10px;
        }

        .achievement-number {
            font-size: 2.5rem;
            font-weight: bold;
            color: #2d3436;
        }

        .achievement-label {
            color: #636e72;
            font-size: 0.9rem;
        }

        .about-image-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }

        .grid-item:first-child {
            grid-column: 1 / -1;
        }

        .grid-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: all 0.3s ease;
        }

        .grid-item img:hover {
            transform: scale(1.05);
        }

        .value-card {
            text-align: center;
            padding: 30px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            height: 100%;
        }

        .value-card:hover {
            transform: translateY(-10px);
        }

        .value-icon {
            font-size: 2.5rem;
            color: #ff4757;
            margin-bottom: 20px;
        }

        .team-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .team-card:hover {
            transform: translateY(-10px);
        }

        .team-image {
            height: 300px;
            overflow: hidden;
        }

        .team-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .team-info {
            padding: 20px;
            text-align: center;
        }

        .social-links {
            margin-top: 15px;
        }

        .social-links a {
            color: #636e72;
            margin: 0 10px;
            font-size: 1.2rem;
            transition: all 0.3s ease;
        }

        .social-links a:hover {
            color: #ff4757;
        }

        .testimonial-card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin: 15px;
        }

        .testimonial-content {
            font-style: italic;
            margin-bottom: 20px;
        }

        .testimonial-author {
            display: flex;
            align-items: center;
        }

        .author-image {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            overflow: hidden;
            margin-right: 15px;
        }

        .author-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .swiper-container {
            padding: 30px 0;
        }

        .swiper-pagination-bullet-active {
            background: #ff4757;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize AOS
            AOS.init({
                duration: 1000,
                once: true
            });

            // Animate achievement numbers
            function animateNumbers() {
                $('.achievement-number').each(function() {
                    const $this = $(this);
                    const finalNum = parseInt($this.data('count'));
                    $({ Counter: 0 }).animate({
                        Counter: finalNum
                    }, {
                        duration: 2000,
                        easing: 'swing',
                        step: function() {
                            $this.text(Math.ceil(this.Counter));
                        }
                    });
                });
            }

            // Initialize Swiper
            const swiper = new Swiper('.swiper-container', {
                slidesPerView: 1,
                spaceBetween: 30,
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true
                },
                breakpoints: {
                    640: {
                        slidesPerView: 2
                    },
                    1024: {
                        slidesPerView: 3
                    }
                },
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false
                }
            });

            // Trigger number animation when section is in view
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateNumbers();
                        observer.unobserve(entry.target);
                    }
                });
            });

            observer.observe(document.querySelector('.achievements'));

            // Parallax effect on header
            $(window).scroll(function() {
                const scroll = $(window).scrollTop();
                $('.about-header').css({
                    'background-position': `center ${scroll * 0.5}px`
                });
            });
        });
    </script>
}
