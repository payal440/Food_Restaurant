@model FoodRestaurant.Models.ContactForm

@{
    ViewData["Title"] = "Contact Us - Spice Heaven";
}

<div class="contact-header">
    <div class="overlay"></div>
    <div class="container">
        <h1 class="text-center display-3 fw-bold text-white mb-3">Contact Us</h1>
        <p class="text-center text-white lead">We're here to help and answer any questions you might have</p>
        <div class="quick-contact-info">
            <div class="row justify-content-center mt-5">
                <div class="col-md-4 quick-contact-item">
                    <i class="fas fa-phone-alt"></i>
                    <p>+1 (555) 123-4567</p>
                </div>
                <div class="col-md-4 quick-contact-item">
                    <i class="fas fa-envelope"></i>
                    <p>info@spiceheaven.com</p>
                </div>
                <div class="col-md-4 quick-contact-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <p>123 Spice Street, City</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="contact-main py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="contact-form-wrapper">
                    <h3 class="section-title">Send us a Message</h3>
                    <p class="text-muted mb-4">Fill out the form below and we'll get back to you as soon as possible.</p>
                    <form id="contactForm" class="contact-form">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="name" placeholder="Your Name" required>
                                    <label for="name">Your Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="email" placeholder="Email" required>
                                    <label for="email">Email Address</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="subject" placeholder="Subject" required>
                                    <label for="subject">Subject</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" id="message" style="height: 150px" placeholder="Message" required></textarea>
                                    <label for="message">Message</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    Send Message <i class="fas fa-paper-plane ms-2"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="map-wrapper">
                    <h3 class="section-title">Find Us</h3>
                    <p class="text-muted mb-4">Visit us at our restaurant or reach out through our contact channels.</p>
                    <div class="map-container">
                        <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.1!2d-73.98!3d40.75!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zM40zMCcwMC4wIk4gNzPCsDU4JzQ4LjAiVw!5e0!3m2!1sen!2sus!4v1234567890"
                            width="100%"
                            height="400"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy">
                        </iframe>
                    </div>
                    <div class="business-hours mt-4">
                        <h4 class="mb-3">Business Hours</h4>
                        <div class="hours-grid">
                            <div class="hour-item">
                                <span>Monday - Friday</span>
                                <span>11:00 AM - 10:00 PM</span>
                            </div>
                            <div class="hour-item">
                                <span>Saturday - Sunday</span>
                                <span>12:00 PM - 11:00 PM</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .contact-header {
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)),
                        url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4');
            background-size: cover;
            background-position: center;
            position: relative;
            padding: 100px 0 80px;
            margin-top: -20px;
            color: white;
            text-align: center;
        }

        .contact-header .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.4);
            z-index: 1;
        }

        .contact-header .container {
            position: relative;
            z-index: 2;
        }

        .quick-contact-info {
            margin-top: 3rem;
        }

        .quick-contact-item {
            text-align: center;
            padding: 20px;
            transition: transform 0.3s ease;
        }

        .quick-contact-item:hover {
            transform: translateY(-5px);
        }

        .quick-contact-item i {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #ff4757;
        }

        .quick-contact-item p {
            margin: 0;
            font-size: 1.1rem;
        }

        .contact-main {
            background: #f8f9fa;
        }

        .contact-form-wrapper, .map-wrapper {
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            height: 100%;
        }

        .section-title {
            color: #2d3436;
            font-weight: 600;
            margin-bottom: 1rem;
            position: relative;
            padding-bottom: 1rem;
        }

        .section-title::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            width: 50px;
            height: 3px;
            background: #ff4757;
            border-radius: 2px;
        }

        .form-floating > .form-control,
        .form-floating > .form-select {
            border: 2px solid #e9ecef;
            border-radius: 10px;
        }

        .form-floating > .form-control:focus {
            border-color: #ff4757;
            box-shadow: 0 0 0 0.2rem rgba(255,71,87,0.25);
        }

        .btn-primary {
            background: #ff4757;
            border: none;
            border-radius: 10px;
            padding: 12px 25px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: #ff2e44;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255,71,87,0.3);
        }

        .map-container {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }

        .business-hours {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 10px;
        }

        .hours-grid {
            display: grid;
            gap: 1rem;
        }

        .hour-item {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 0;
            border-bottom: 1px dashed #dee2e6;
        }

        .hour-item:last-child {
            border-bottom: none;
        }

        /* Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .contact-form-wrapper, .map-wrapper {
            animation: fadeInUp 0.6s ease-out;
        }

        .quick-contact-item {
            animation: fadeInUp 0.6s ease-out;
            animation-fill-mode: both;
        }

        .quick-contact-item:nth-child(1) { animation-delay: 0.2s; }
        .quick-contact-item:nth-child(2) { animation-delay: 0.4s; }
        .quick-contact-item:nth-child(3) { animation-delay: 0.6s; }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .contact-header {
                padding: 80px 0 60px;
            }

            .quick-contact-item {
                margin-bottom: 1rem;
            }

            .contact-form-wrapper, .map-wrapper {
                padding: 1.5rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Form validation and submission
            $('#contactForm').submit(function(e) {
                e.preventDefault();
                
                const btn = $(this).find('button[type="submit"]');
                const originalText = btn.html();
                btn.html('<i class="fas fa-spinner fa-spin"></i> Sending...').prop('disabled', true);

                // Simulate form submission
                setTimeout(() => {
                    Swal.fire({
                        icon: 'success',
                        title: 'Message Sent!',
                        text: 'Thank you for contacting us. We will get back to you soon.',
                        confirmButtonColor: '#ff4757'
                    }).then(() => {
                        this.reset();
                        btn.html(originalText).prop('disabled', false);
                    });
                }, 1500);
            });

            // Initialize AOS
            AOS.init({
                duration: 1000,
                once: true
            });
        });
    </script>
}