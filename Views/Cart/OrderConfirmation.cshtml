@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="confirmation-page py-5">
    <div class="container">
        <div class="text-center">
            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
            <h1 class="mt-4">Thank You!</h1>
            <p class="lead">Your order has been placed successfully.</p>
            <div class="confirmation-details mt-4">
                <p>Order ID: #@DateTime.Now.ToString("yyyyMMddHHmmss")</p>
                <p>You will receive an email confirmation shortly.</p>
            </div>
            <div class="mt-5">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Continue Shopping</a>
            </div>
        </div>
    </div>
</div>