@{
    ViewData["Title"] = "Book a Table - Food Heaven";
    Layout = ViewBag.IsLoggedIn ? "_DashboardLayout" : "_Layout";
}

<div class="booking-header">
    <div class="overlay"></div>
    <div class="container position-relative">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <span class="badge bg-primary mb-3">Reserve Your Table</span>
                <h1 class="display-3 fw-bold text-white mb-3">Dine With Us</h1>
                <p class="lead text-white mb-4">Experience exceptional dining in an elegant atmosphere</p>
                <div class="booking-stats">
                    <div class="row g-3 justify-content-center">
                        <div class="col-auto">
                            <div class="stat-item">
                                <span class="stat-number">24/7</span>
                                <span class="stat-label">Online Booking</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="stat-item">
                                <span class="stat-number">50+</span>
                                <span class="stat-label">Tables</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="stat-item">
                                <span class="stat-number">100%</span>
                                <span class="stat-label">Satisfaction</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="booking-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="booking-form-container" data-aos="fade-right">
                    <form id="bookingForm" class="booking-form">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">Full Name</label>
                                    <input type="text" class="form-control" id="name" required>
                                    <div class="invalid-feedback">Please enter your name</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email">Email Address</label>
                                    <input type="email" class="form-control" id="email" required>
                                    <div class="invalid-feedback">Please enter a valid email</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone">Phone Number</label>
                                    <input type="tel" class="form-control" id="phone" required>
                                    <div class="invalid-feedback">Please enter your phone number</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="guests">Number of Guests</label>
                                    <select class="form-control" id="guests" required>
                                        <option value="">Select number of guests</option>
                                        <option value="1">1 Person</option>
                                        <option value="2">2 People</option>
                                        <option value="3">3 People</option>
                                        <option value="4">4 People</option>
                                        <option value="5">5 People</option>
                                        <option value="6">6 People</option>
                                        <option value="7+">7+ People</option>
                                    </select>
                                    <div class="invalid-feedback">Please select number of guests</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="date">Date</label>
                                    <input type="date" class="form-control" id="date" required>
                                    <div class="invalid-feedback">Please select a date</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="time">Time</label>
                                    <select class="form-control" id="time" required>
                                        <option value="">Select time</option>
                                        <!-- Time slots will be populated dynamically -->
                                    </select>
                                    <div class="invalid-feedback">Please select a time</div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="special_requests">Special Requests</label>
                                    <textarea class="form-control" id="special_requests" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-lg w-100" onclick="return validateAndSubmit()">
                                    Book Now
                                    <i class="fas fa-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="booking-info" data-aos="fade-left">
                    <div class="info-card mb-4">
                        <div class="info-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h4>Opening Hours</h4>
                        <ul class="list-unstyled">
                            <li>Monday - Friday: 11:00 AM - 10:00 PM</li>
                            <li>Saturday - Sunday: 10:00 AM - 11:00 PM</li>
                        </ul>
                    </div>
                    <div class="info-card mb-4">
                        <div class="info-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <h4>Location</h4>
                        <p>123 Restaurant Street<br>Foodie District, City 12345</p>
                    </div>
                    <div class="info-card">
                        <div class="info-icon">
                            <i class="fas fa-phone-alt"></i>
                        </div>
                        <h4>Contact</h4>
                        <p>Phone: (123) 456-7890<br>Email: reservations@spiceheaven.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .booking-header {
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.8)),
                        url('https://images.unsplash.com/photo-1552566626-52f8b828add9');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            padding: 150px 0 100px;
            margin-top: -20px;
            position: relative;
            overflow: hidden;
        }

        .booking-header .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(255, 71, 87, 0.2) 0%, rgba(0, 0, 0, 0.8) 100%);
            z-index: 1;
        }

        .booking-header .container {
            position: relative;
            z-index: 2;
        }

        .booking-header .badge {
            font-size: 1rem;
            padding: 0.5rem 1.5rem;
            background-color: #ff4757 !important;
            margin-bottom: 1.5rem;
            transform: translateY(20px);
            animation: fadeInDown 0.5s ease forwards;
            border-radius: 30px;
            box-shadow: 0 4px 15px rgba(255, 71, 87, 0.3);
        }

        .booking-header h1 {
            font-size: 4rem;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            transform: translateY(20px);
            animation: fadeInDown 0.5s ease forwards 0.2s;
            background: linear-gradient(45deg, #ffffff, #ffd3d3);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .booking-header .lead {
            font-size: 1.25rem;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
            transform: translateY(20px);
            animation: fadeInDown 0.5s ease forwards 0.4s;
            color: #ffd3d3;
        }

        .booking-stats {
            margin-top: 3rem;
            transform: translateY(20px);
            animation: fadeInUp 0.5s ease forwards 0.6s;
        }

        .stat-item {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 1rem 2rem;
            border-radius: 15px;
            text-align: center;
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .stat-item:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 71, 87, 0.3);
        }

        .stat-number {
            display: block;
            font-size: 2rem;
            font-weight: bold;
            color: #ff4757;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 4px rgba(0,0,0,0.2);
        }

        .stat-label {
            display: block;
            color: #ffd3d3;
            font-size: 0.9rem;
            white-space: nowrap;
        }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .booking-form-container {
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            padding: 0.8rem 1rem;
            border-radius: 8px;
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #ff4757;
            box-shadow: 0 0 0 0.2rem rgba(255, 71, 87, 0.25);
        }

        .btn-primary {
            background-color: #ff4757;
            border-color: #ff4757;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #ff3040;
            border-color: #ff3040;
            transform: translateY(-2px);
        }

        .info-card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            text-align: center;
            transition: all 0.3s ease;
        }

        .info-card:hover {
            transform: translateY(-5px);
        }

        .info-icon {
            width: 60px;
            height: 60px;
            background: #ff4757;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin: 0 auto 20px;
        }

        .info-card h4 {
            margin-bottom: 15px;
            color: #2d3436;
        }

        .info-card p, .info-card ul {
            color: #636e72;
            margin-bottom: 0;
        }

        .info-card ul li {
            margin-bottom: 5px;
        }

        /* Time slot styles */
        .time-slots {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
            gap: 10px;
            margin-top: 10px;
        }

        .time-slot {
            padding: 10px;
            text-align: center;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .time-slot:hover {
            border-color: #ff4757;
            color: #ff4757;
        }

        .time-slot.selected {
            background-color: #ff4757;
            border-color: #ff4757;
            color: white;
        }

        .time-slot.unavailable {
            background-color: #f8f9fa;
            border-color: #e9ecef;
            color: #adb5bd;
            cursor: not-allowed;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .booking-header {
                padding: 120px 0 80px;
            }

            .booking-header h1 {
                font-size: 3rem;
            }

            .stat-item {
                padding: 0.8rem 1.5rem;
            }

            .stat-number {
                font-size: 1.5rem;
            }

            .stat-label {
                font-size: 0.8rem;
            }

            .booking-form-container {
                padding: 20px;
            }

            .info-card {
                margin-top: 30px;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize AOS
            AOS.init({
                duration: 1000,
                once: true
            });

            // Set minimum date to today
            const today = new Date().toISOString().split('T')[0];
            $('#date').attr('min', today);

            // Populate time slots based on date selection
            $('#date').change(function() {
                const selectedDate = $(this).val();
                const timeSelect = $('#time');
                timeSelect.empty();
                
                // Add default option
                timeSelect.append('<option value="">Select time</option>');

                // Get day of week (0 = Sunday, 6 = Saturday)
                const dayOfWeek = new Date(selectedDate).getDay();
                const isWeekend = dayOfWeek === 0 || dayOfWeek === 6;

                // Set time slots based on day
                const startTime = isWeekend ? 10 : 11;
                const endTime = isWeekend ? 23 : 22;

                for (let hour = startTime; hour < endTime; hour++) {
                    for (let minute of ['00', '30']) {
                        const time = `${hour.toString().padStart(2, '0')}:${minute}`;
                        timeSelect.append(`<option value="${time}">${time}</option>`);
                    }
                }
            });

            // Form validation
            const form = document.getElementById('bookingForm');
            form.addEventListener('submit', function(event) {
                event.preventDefault();
                
                if (form.checkValidity()) {
                    // Show success message
                    Swal.fire({
                        icon: 'success',
                        title: 'Booking Confirmed!',
                        text: 'We have received your reservation request. A confirmation email will be sent shortly.',
                        confirmButtonColor: '#ff4757'
                    });

                    // Reset form
                    form.reset();
                } else {
                    event.stopPropagation();
                }

                form.classList.add('was-validated');
            });

            // Real-time availability check (simulated)
            $('#guests, #date, #time').change(function() {
                const guests = $('#guests').val();
                const date = $('#date').val();
                const time = $('#time').val();

                if (guests && date && time) {
                    // Simulate API call to check availability
                    setTimeout(() => {
                        const isAvailable = Math.random() > 0.3; // 70% chance of availability
                        const submitBtn = $('button[type="submit"]');

                        if (isAvailable) {
                            submitBtn.prop('disabled', false)
                                   .html('Book Now <i class="fas fa-arrow-right ms-2"></i>');
                        } else {
                            submitBtn.prop('disabled', true)
                                   .html('<i class="fas fa-exclamation-circle me-2"></i> Not Available');
                            
                            // Show alternative times
                            Swal.fire({
                                icon: 'info',
                                title: 'Table Not Available',
                                text: 'Would you like to see alternative time slots?',
                                showCancelButton: true,
                                confirmButtonText: 'Show Alternatives',
                                confirmButtonColor: '#ff4757',
                                cancelButtonText: 'No, thanks'
                            });
                        }
                    }, 500);
                }
            });
        });

        function validateAndSubmit() {
            const isLoggedIn = @Json.Serialize(ViewBag.IsLoggedIn);
            if (!isLoggedIn) {
                Swal.fire({
                    icon: 'info',
                    title: 'Login Required',
                    text: 'Please log in to book a table.',
                    confirmButtonColor: '#ff4757',
                    confirmButtonText: 'Login Now'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/Account/Login';
                    }
                });
                return false;
            }
            return true;
        }
    </script>
}