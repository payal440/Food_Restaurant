@using FoodRestaurant.Models.ViewModels
@model RegisterViewModel

<div class="auth-container">
    <h2 class="auth-title">Create Account</h2>
    <form asp-action="Register" asp-controller="Account" method="post">
        <div class="form-group">
            <input asp-for="Name" class="form-control" placeholder="Full Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary auth-btn">Register</button>
        <div class="auth-links">
            <a href="/Account/Login">Already have an account? Login</a>
        </div>
    </form>
</div>