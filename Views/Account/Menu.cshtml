@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script></script>
    <script>
        $(document).ready(function() {
            let cart = [];
            let cartTotal = 0;

            // Open cart sidebar
            function openCart() {
                const modal = new bootstrap.Modal(document.getElementById('cartModal'));
                modal.show();
            }

            function closeCart() {
                const modal = bootstrap.Modal.getInstance(document.getElementById('cartModal'));
                if (modal) {
                    modal.hide();
                }
            }

            // Update cart display
            function updateCart() {
                const cartItems = $('.cart-items');
                cartItems.empty();
                cartTotal = 0;

                cart.forEach(item => {
                    cartTotal += item.price * item.quantity;
                    cartItems.append(`
                        <div class="cart-item" data-id="${item.id}">
                            <div class="cart-item-details">
                                <h6>${item.name}</h6>
                                <div class="text-muted">₹${item.price}</div>
                            </div>
                            <div class="cart-item-quantity">
                                <button class="quantity-btn decrease-qty">−</button>
                                <span>${item.quantity}</span>
                                <button class="quantity-btn increase-qty">+</button>
                                <button class="btn btn-sm btn-danger ms-2 remove-item">×</button>
                            </div>
                        </div>
                    `);
                });

                $('.total-amount').text(`₹${cartTotal}`);
            }

            // Add to cart
            $(document).on('click', '.add-to-cart-btn', function(e) {
                e.preventDefault();
                const card = $(this).closest('.menu-card');
                const name = card.find('.menu-title').text();
                const price = parseInt(card.find('.menu-price').text().replace('₹', ''));
                const id = Date.now();

                const existingItem = cart.find(item => item.name === name);
                if (existingItem) {
                    existingItem.quantity++;
                } else {
                    cart.push({ id, name, price, quantity: 1 });
                }

                updateCart();

                // Show success toast
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'success',
                    title: `${name} added to cart!`,
                    showConfirmButton: false,
                    timer: 2000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.addEventListener('mouseenter', Swal.stopTimer)
                        toast.addEventListener('mouseleave', Swal.resumeTimer)
                    }
                });

                // Open cart modal
                const cartModal = new bootstrap.Modal(document.getElementById('cartModal'));
                cartModal.show();
            });

            // Handle quantity changes
            $(document).on('click', '.increase-qty', function() {
                const id = $(this).closest('.cart-item').data('id');
                const item = cart.find(item => item.id === id);
                if (item) {
                    item.quantity++;
                    updateCart();
                }
            });

            $(document).on('click', '.decrease-qty', function() {
                const id = $(this).closest('.cart-item').data('id');
                const item = cart.find(item => item.id === id);
                if (item && item.quantity > 1) {
                    item.quantity--;
                    updateCart();
                }
            });

            // Remove item from cart
            $(document).on('click', '.remove-item', function() {
                const cartItem = $(this).closest('.cart-item');
                const id = cartItem.data('id');
                const name = cartItem.find('h6').text();

                cart = cart.filter(item => item.id !== id);
                updateCart();

                // Show remove toast
                Swal.fire({
                    toast: true,
                    position: 'top-end',
                    icon: 'success',
                    title: `${name} removed from cart`,
                    showConfirmButton: false,
                    timer: 2000,
                    timerProgressBar: true
                });
            });

            // Checkout button
            $(document).on('click', '.checkout-btn', function() {
                if (cart.length === 0) {
                    Swal.fire({
                        icon: 'info',
                        title: 'Empty Cart',
                        text: 'Please add items to your cart before checkout'
                    });
                    return;
                }

                Swal.fire({
                    title: 'Proceed to Checkout?',
                    text: `Total Amount: ₹${cartTotal}`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, Checkout',
                    cancelButtonText: 'Continue Shopping'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/Cart/Checkout';
                    }
                });
            });

            // Loading Screen
            setTimeout(() => {
            // Loading Screen
            setTimeout(() => {
                $('.loading-screen').addClass('hide');
            }, 1000);

            // Cart Panel Toggle
            $('.cart-toggle').click(function() {
                $('.cart-panel').addClass('show');
                $('.cart-overlay').addClass('show');
            });

            $('.cart-close, .cart-overlay').click(function() {
                $('.cart-panel').removeClass('show');
                $('.cart-overlay').removeClass('show');
            });

            // Add to Cart
            $('.add-to-cart').click(function() {
                const id = $(this).data('id');
                const name = $(this).data('name');
                const price = $(this).data('price');
                addToCart(id, name, price);
            });

            function addToCart(id, name, price) {
                const cartItems = $('.cart-items');
                const cartItem = `
                    <div class="cart-item" data-id="${id}">
                        <div class="cart-item-details">
                            <h6 class="cart-item-title">${name}</h6>
                            <div class="cart-item-price">₹${price}</div>
                        </div>
                        <div class="cart-item-quantity">
                            <button class="btn btn-sm btn-outline-secondary decrease-quantity">-</button>
                            <span class="quantity">1</span>
                            <button class="btn btn-sm btn-outline-secondary increase-quantity">+</button>
                        </div>
                        <button class="btn btn-sm btn-danger remove-item"><i class="fas fa-trash"></i></button>
                    </div>
                `;

                cartItems.append(cartItem);
                updateCartUI();
            }

            function updateCartUI() {
                const cartItems = $('.cart-items');
                const emptyCart = $('.cart-empty');
                const checkoutBtn = $('.checkout-btn');
                
                if (cartItems.children().length > 0) {
                    emptyCart.addClass('d-none');
                    checkoutBtn.prop('disabled', false);
                } else {
                    emptyCart.removeClass('d-none');
                    checkoutBtn.prop('disabled', true);
                }

                updateTotal();
            }

            function updateTotal() {
                let total = 0;
                $('.cart-item').each(function() {
                    const price = parseFloat($(this).find('.cart-item-price').text().replace('₹', ''));
                    const quantity = parseInt($(this).find('.quantity').text());
                    total += price * quantity;
                });
                $('.total-amount').text(`₹${total.toFixed(2)}`);
            }

            // Cart Item Quantity
            $(document).on('click', '.increase-quantity', function() {
                const quantitySpan = $(this).siblings('.quantity');
                let quantity = parseInt(quantitySpan.text());
                quantitySpan.text(quantity + 1);
                updateTotal();
            });

            $(document).on('click', '.decrease-quantity', function() {
                const quantitySpan = $(this).siblings('.quantity');
                let quantity = parseInt(quantitySpan.text());
                if (quantity > 1) {
                    quantitySpan.text(quantity - 1);
                    updateTotal();
                }
            });

            // Remove Cart Item
            $(document).on('click', '.remove-item', function() {
                $(this).closest('.cart-item').remove();
